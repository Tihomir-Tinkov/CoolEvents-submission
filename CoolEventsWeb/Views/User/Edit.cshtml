@model CoolEventsWeb.ViewModels.UserViewModel

<form method="post">
    <div>
        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="User"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="User" placeholder="User">
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Role"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Role" placeholder="Role">
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-success">Edit</button>
                <br />
                <a asp-controller="User" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}