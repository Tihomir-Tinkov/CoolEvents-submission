@model CoolEventsWeb.ViewModels.UserViewModel

<form method="post" asp-action="DeleteConfirm">
    <div>
        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="User"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="User" disabled>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Role"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Role" disabled>
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <br />
                <a asp-controller="User" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
