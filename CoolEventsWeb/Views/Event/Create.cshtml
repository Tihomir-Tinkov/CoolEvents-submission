@model CoolEventsWeb.ViewModels.EventViewModel

<form method="post" asp-action="Create">
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-6 text-right">
                <label asp-for="Event"></label>
            </div>
            <div class="col-6 text-left">
                <input asp-for="Event" placeholder="Event">
                <span asp-validation-for="Event" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-success">Create</button>
                <br />
                <a asp-controller="Event" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
